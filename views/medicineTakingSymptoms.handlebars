<!doctype html>

<html>
<head>
	<title>Our App</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="css/bootstrap.css" rel="stylesheet">
<link href="css/bootstrap-theme.css" rel="stylesheet">
<link href="css/hci-friends.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		<div class="jumbotron">
			<h2>Select your symptoms</h2>
		</div>
		<div class="container">
			
		<table class="table" style="font-size:large;float:center">
			<tr>
				<th class="col-sm-1">Confirm</th>
				<th class="col-sm-2">Symptom Name</th>
				<th class="col-sm-1">Mild</th>
				<th class="col-sm-1">Moderate</th>
				<th class="col-sm-1">Severe</th>
			</tr>
			{{#each Symptoms}}
			<tr>
				<td>
					<label class="checkbox-inline">
  						<input type="checkbox" id="InlineCheckbox1" value="option1">
					</label></td>
				<td>{{name}}</td>
				<td>
					<label class="radio-inline">
					  <input type="radio" name="Radios{{name}}" id="Radio1" value="option1">
					</label>
				</td>
				<td>
					<label class="radio-inline text-center">
					  <input type="radio" name="Radios{{name}}" id="radio2" value="option2" checked>
					</label>
				</td>
				<td>
					<label class="radio-inline">
					  <input type="radio" name="Radios{{name}}" id="radio3" value="option3">
					</label>
				</td>
			</tr>
			{{/each}}
			</table>							
		</div>
		<div class="btn-group btn-group-justified">
			<a class="btn btn-primary btn-lg" href="medicineTaking3">BACK</a>
			<a class="btn btn-success btn-lg" href="medicineTakingConfirmFinal">CONTINUE</a>
		</div>
	</div>
</body>
<script src="js/jquery-1.11.0.js"></script>
<script src="js/bootstrap.js"></script>
<script src="js/hci-friends.js"></script>
</html>
